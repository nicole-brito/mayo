<div class="container.is-max-widescreen">
  <section class="section is-medium">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title title"><%= t('.sign_up') %></h2>
        <div class="is-flex">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div>
            <div class="field">
              <%= f.label t('.f_name'), class: "label" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: "input is-primary" %>
            </div>

              <div class="field">
              <%= f.label t('.l_name'), class: "label" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "input is-primary" %>
            </div>


            <div class="field">
              <%= f.label :email, class: "label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary" %>
            </div>

            <div class="field">
              <%= f.label :password, class: "label" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input is-primary" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-primary" %>
            </div>

            </div>
            <% if @minimum_password_length %>
              <small class="help is-success"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %></br>

            <div class="field">
              <%= f.submit t('.sign_up'), class: "button is-success" %>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
          </div>
    </div>
  </div>
  </section>
</div>
