<%= render 'shared/nav' %>

<h3><%= t("nav.hello") %></h3>

<%= link_to "New Article", new_article_path %>

<h1>Articles</h1>

<h2>Our blog has <%= Article.count %> articles and counting!</h2>


<% @articles.each do |article| %>
  <ul class="card">
    <li>
      <%= link_to article.title, article %>
      <p><%= article.body.split("\n").first %></p>
      <p><%= article.user.first_name %> <%= article.user.last_name %></p>
      <p><%= article.created_at.strftime("%B %d, %Y") %></p>
      <% article.tag_list.each do |tag| %>
        <span class="tag is-<%= random_bulma_color %>"><%= tag %></span>
      <% end %>
    </li>
  </ul>
<% end %>


<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
