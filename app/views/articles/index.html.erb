    <div class="navbar-item">
      <div class="buttons">
        <% if current_user %>
          <%= button_to "Log out", logout_path, method: "delete", class: 'button is-primary' %>
        <% else %>
          <%= link_to "Login", 'login', class: 'button is-primary' %>
          <%= link_to "Sign up", 'signup', class: 'button is-secundary' %>
        <% end %>
