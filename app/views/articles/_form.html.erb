<%= form_with model: article do |form| %>
  <div class="card">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="card">
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= form_with model: article do |form| %>
  <div class="field">
    <label class="label">Title</label>
    <div class="control has-icons-left">
      <%= form.text_field :title, :placeholder => "Title", class: "input" %>
      <span class="icon is-small is-left">
        <i class="fas fa-heading"></i>
      </span>
    </div>
    <% if article.errors[:title].any? %>
      <p class="help is-danger"><%= article.errors[:title].join(", ") %></p>
    <% end %>
  </div>

  <div class="field">
    <label class="label">Body</label>
    <div class="control has-icons-left">
      <%= form.text_area :body, :placeholder => "Body", class: "textarea" %>
      <span class="icon is-small is-left">
        <i class="fas fa-paragraph"></i>
      </span>
    </div>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.submit "Submit", class: "button is-primary" %>
  </div>
<% end %>
</div>